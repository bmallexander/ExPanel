<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game Server Panel</title>
</head>
<body>
    <h1>Game Server Panel</h1>
    <h2>Running Containers</h2>
    <ul>
        <% containers.forEach(container => { %>
            <li>
                <%= container.Names[0] %> - <%= container.Image %>
                <form action="/remove" method="POST" style="display:inline;">
                    <input type="hidden" name="containerId" value="<%= container.Id %>">
                    <button type="submit">Stop and Remove</button>
                </form>
            </li>
        <% }); %>
    </ul>

    <h2>Create New Container</h2>
    <form action="/create" method="POST">
        <label for="imageName">Docker Image Name:</label>
        <input type="text" id="imageName" name="imageName" required>
        <br>
        <label for="containerName">Container Name:</label>
        <input type="text" id="containerName" name="containerName" required>
        <br>
        <button type="submit">Create Container</button>
    </form>
</body>
</html>
